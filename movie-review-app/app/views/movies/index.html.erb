<div style="background-color: #d8d7d7; padding-left: 10px">
<h3>Movie Listings</h3>
</div>
  <% @movies.each do |movie| %>
     <div class="row">
         <div class="column">
            <h3><%= movie.title %></h3>
            <%= link_to movie_poster(movie.id), movie_path(movie) %>
        </div>
    
        <div class="column">
            <br><br><br><br>
            <h4><%= movie.synopsis %></h4>
            <h4><strong>Directed by: </strong><%= movie.director %></h4>
            <h4><strong>Released: </strong><%= movie.releaseDate %></h4>
            <h4><strong>Rated: </strong><%= movie.maRating %></h4>
            <h4><%= link_to "read more", movie_path(movie)%></h4>
        </div>
    </div>
  <% end %>
  
