  <tr>
    <% end %>
      <% x = 0 %>
      <% movie.reviews.each do |review| %>
          <% x += review.rating %>
      <% end %>
          <td><%= link_to movie_poster(movie.id), movie_path(movie) %></td>
  <% end %>
  </tr>
  </table>
  </div>
  
