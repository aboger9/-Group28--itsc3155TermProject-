<%= render 'menu' %>

  <h1>
    <strong>Title:</strong>
    <%= @movie.title %>
  </h1>
 
 <p>
    <strong>Director:</strong>
    <%= @movie.director %> 
  </p>
 
 <p>
    <strong>Synopsis:</strong>
    <%= @movie.synopsis %> 
  </p>
 
  <p>
    <strong>Release date:</strong>
    <%= @movie.releaseDate %>
  </p>
 
  <p>
    <strong>MA Rating:</strong>
    <%= @movie.maRating %>
  </p>
  
  <br>
  <h2>Reviews:</h2>
  
  <% @movie.reviews.each do |review| %>
<p>
  <strong>Author:</strong>
  <%= User.find_by_id(review.user_id).username%>
</p>
 
 <p>
    <strong>Rating:</strong>
    <%= review.rating %> /10
  </p>
 
  <p>
    <strong>Review date:</strong>
    <%= review.date %>
  </p>
 
  <p>
    <strong>Review:</strong>
    <%= review.body %>
  </p>

  <br>
  <br>
  
<% end %>

<h2>Add a review:</h2>
<%= form_for([@movie, @movie.reviews.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :body %>
  </p>
  
  <p>
    <%= f.label :rating %><br>
    <%= f.text_area :rating %>
  </p>
  
  <p>
    <%= f.label :date %><br>
    <%= f.text_area :date %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
