<%= render 'menu' %>

<div class="a_row">
     <div class="a_column">
        <h4> 
          <%= user_avatar(@user.id) %> 
        </h4>
      </div>
      <div class="a_column">
        
      <h4> <strong>Email: </strong> 
      <%= @user.email %> 
      </h4>

      <h4> <strong>Username: </strong>
      <%= @user.username %>
      </h4>

      <h4> <strong>Encrypted password: </strong>
      <%= @user.password_digest %>
      </h4>

      <h4><%= link_to 'Edit', edit_user_path(@user) %> 
      <%= link_to 'Destroy',
            user_path(@user),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
      </h4>
    </div>
</div>

<% if @user.reviews.any? == true %>

<h2>Reviews posted</h2>
 
 <% x = 0 %>
<% @user.reviews.each do |review| %>
<% x+= 1 %>

<% if x % 2 == 0 %>
<div style="background-color: #d8d7d7; padding-left: 10px">
  <hr>
  <h4>
    Review for:
    <%= review.title%>
  </h4>
 
 <p>
    <strong>Rating:</strong>
    <%= review.rating %>/10
  </p>
 
  <p>
    <strong>Review Date:</strong>
    <%= review.date %>
  </p>
 
  <p>
    <strong>Review:</strong>
    <%= review.body %>
  </p>
  
  <p><strong>
    <%= link_to 'Delete', [review.user, review],
          method: :delete, 
          data: {confirm: 'Are you sure?'} %>
  </p></strong>
  
  &emsp;
</div>

<% else %>
<div>
  
  <hr>
  <h4>
    Review for:
    <%= review.title%>
  </h4>
 
 <p>
    <strong>Rating:</strong>
    <%= review.rating %>/10
  </p>
 
  <p>
    <strong>Review Date:</strong>
    <%= review.date %>
  </p>
 
  <p>
    <strong>Review:</strong>
    <%= review.body %>
  </p>
  
  <p><strong>
    <%= link_to 'Delete', [review.user, review],
          method: :delete, 
          data: {confirm: 'Are you sure?'} %>
  </p></strong>
  
  &emsp;
</div>
<% end %>

<% end %>

<footer>
<hr>
<h2>
    designed by Black Hats
</h2>
</footer>

<% else %>
<h2><strong>You do not have any reviews posted</strong></h2>
<%= render 'footer' %>
<% end %>

